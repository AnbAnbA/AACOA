<Page x:Class="AACOA.LogInS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AACOA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogInS">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Label Content="Телеком Нева Связь"></Label>
                
            </StackPanel>
            <StackPanel>
                <Label Content="Номер"></Label>
                <TextBox x:Name="tbnumber" Width="200" IsEnabled="True" PreviewKeyDown="tbnumber_PreviewKeyDown"></TextBox>
                <Label Content="Пароль"></Label>
                <TextBox x:Name="tbpassword" Width="200" IsEnabled="False"></TextBox>
                <Label Content="Код"></Label>
                <TextBox x:Name="tbcode" Width="200" IsEnabled="False"></TextBox>
                <Button x:Name="btrefresh" Width="50" Height="25" IsEnabled="False"></Button>
            </StackPanel>
            <StackPanel>
                <Button x:Name="btcancel" Width="125" Height="20" Content="Отмена" IsEnabled="True"></Button>
                <Button x:Name="btlogin" Width="125" Height="20" Content="Вход" IsEnabled="False"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
